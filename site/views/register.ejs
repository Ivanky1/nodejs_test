<% layout('main') %>
<form method="post" action="/register">
    <div>Зарегистрироваться</div>
    <fieldset>
        <label>Логин</label>
        <input type="text" name="login">
    </fieldset>
    <fieldset>
        <label>Пароль</label>
        <input type="password" name="pass">
    </fieldset>
    <fieldset>
        <label>ФИО</label>
        <input type="text" name="fio">
    </fieldset>
    <input type="submit" value="Зарегиться">
</form>